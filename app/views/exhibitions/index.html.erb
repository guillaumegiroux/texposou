<p id="notice"><%= notice %></p>

<h1>Listing Exhibitions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Opening at</th>
      <th>Closing at</th>
      <th>Capacity</th>
      <th>Artist</th>
      <th>Place</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibitions.each do |exhibition| %>
      <tr>
        <td><%= exhibition.name %></td>
        <td><%= exhibition.description %></td>
        <td><%= exhibition.opening_at %></td>
        <td><%= exhibition.closing_at %></td>
        <td><%= exhibition.capacity %></td>
        <td><%= exhibition.artist %></td>
        <td><%= exhibition.place %></td>
        <td><%= exhibition.status %></td>
        <td><%= link_to 'Show', exhibition %></td>
        <td><%= link_to 'Edit', edit_exhibition_path(exhibition) %></td>
        <td><%= link_to 'Destroy', exhibition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

