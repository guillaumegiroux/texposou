<% @exhibitions.each do |exhibition| %>
  <article>
    <%= link_to exhibition do %>
      <div class='background-image' style='background-image: url(https://images.unsplash.com/photo-1453814235491-3cfac3999928?crop=entropy&amp;dpr=2&amp;fit=crop&amp;fm=jpg&amp;h=925&amp;ixjsv=2.1.0&amp;ixlib=rb-0.3.5&amp;q=50&amp;w=1700)'></div>
      <div class='infos'>
        <div class='infos-date'>
          <%= exhibition.opening_at.strftime("%d") %>
          <span><%= exhibition.opening_at.strftime("%b") %></span>
        </div>
        <div class='infos-right'>
          <h3>
            <%= exhibition.name %>
            <span class='cat'>cat√©</span>
          </h3>
          <span><%= exhibition.place %> - <%= exhibition.capacity %> places</span>
        </div>
      </div>
    <% end %>
  </article>
<% end %>