<section class="page-container profile-container">
	<div class="content">
		<div class="avatar">
			<img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(@user.email) %>?s=400" alt="<%= @user.username %>" />
		</div>
		<div class="profile-infos">
			<h1>
				<%= @user.username %>
				<% if user_signed_in? && @user.id == current_user.id %>
					<%= link_to 'modifier le profil',edit_user_registration_path, :class => "button profile-edit" %>
				<% end %>
			</h1>
			<span class="profile-city">
				Bordeaux
				<% if @user.city %>
					<%= @user.city %>
				<% end %>
			</span>
			<span class="last-connection"> derni√®re connexion le <%= @user.last_sign_in_at.strftime("%d/%m/%Y") %></span>
			<div class="profile-data">
				<p class="profile-bio">
					<%= @user.biography %>
				</p>
				<% if @user.website %>
					<p class="profile-website"><%= link_to @user.website, @user.website, :target => "_blank" %></p>
				<% end %>	
			</div>
		</div>
	</div>
</section>

<section class='home-galery'>
	<div class='content last-places'>
		<h2>Mes lieux</h2>
		<%= render 'places/list' %>

		<%= link_to 'Nouvelle adresse', new_place_path %>
	</div>
	<div class='content last-exhibitions'>
		<h2>Mes expositions</h2>
		<%= render 'exhibitions/list' %>
	</div>
	<div class="content">
		<h2>Mes inscriptions</h2>
		<%= render 'visits/list' %>
	</div>
</section>